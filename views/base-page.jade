mixin HEAD_TITLE
	.container-fluid
		.container
			div.phrase.text-center
				span Phrase for today : &#009;
					span!= phrase

mixin BASIS_PAGE
	html
		+HEAD
		title!= title
		body
			+NAVBAR
			+BACKGROUND_IMAGE
			+CONTAINER_MD_12_CENTER
				block

mixin BASIS_PAGE_CTRL
	html(ng-app='SampleApp')
		+HEAD
		title!= title || "Someone page"
		body(ng-controller='SampleAppCtrl')
			+NAVBAR
			+CONTAINER_MD_12_CENTER
				block

mixin BACKGROUND_IMAGE
	.container-fluid.page-bg

